@model IEnumerable<PostViewModel>
@{
    ViewData["Title"] = "Blog Yazıları";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">@ViewData["Title"]</h1>
            <div class="mb-3">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Yeni Yazı
                </a>
            </div>

            @foreach(var post in Model)
            {
                <div class="card mb-2">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h5 class="card-title">
                                    <a asp-action="Details" asp-route-id="@post.Id" class="text-decoration-none">
                                        @post.Title
                                    </a>
                                </h5>
                                <p class="card-text">@post.Content.Substring(0, Math.Min(150, post.Content.Length))...</p>
                                <small class="text-muted">
                                    @post.Author tarafından @post.CreatedDate.ToString("dd/MM/yyyy") tarihinde yazıldı.
                                </small>
                            </div>
                            <div class="text-end">
                                <status is-published="@post.IsPublished"></status>
                                <view-count count="@post.ViewCount" class="mt-2"></view-count>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>