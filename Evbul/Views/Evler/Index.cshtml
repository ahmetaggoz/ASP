@model EvViewModel

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">Popüler evler</h1>
            @foreach (var ev in Model.Evler)
            {
                <div class="card bg-transparent border-0 mb-3">
                    <div class="row">
                        <div class="col-4">
                            <img src="~/img/@ev.Image" class="img-fluid rounded" />
                        </div>
                        <div class="col-8">
                            <h5><a href="#" class="btn-link fw-bold">@ev.Baslik</a></h5>
                            <p>@ev.Aciklama</p>
                            <a href="#" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold">Deniz Manzarası</a>
                        </div>
                    </div>
                </div>
                <hr class="my-3">
            }
            <nav>
                <ul class="pagination">
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item"><a href="#" class="page-link">3</a></li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Özellikler</h5>
            </div>
            <div class="card-body">
                <ul class="list-inline d-flex flex-wrap gap-2">
                    @foreach (var ozellik in Model.Ozellikler)
                    {
                        <li class="list-inline-item">
                            <a class="btn btn-outline-secondary btn-sm">@ozellik.Yazi</a>
                        </li>
                    }
                </ul>
            </div>
        </div>

    </div>
</div>

