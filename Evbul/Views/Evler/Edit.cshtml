@model EvOlusturViewModel

<div class="row">
    <div class="col-12">
        <div class="bg-white p-4">
            
        
        <h1>Ev Düzenle</h1>
        <form action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EvId">
            <div class="mb-3">
                <label asp-for="Baslik" class="form-label"></label>
                <input asp-for="Baslik" class="form-control">
                <span asp-validation-for="Baslik" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Aciklama" class="form-label"></label>
                <textarea asp-for="Aciklama" class="form-control"></textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Kapasite" class="form-label"></label>
                <input  asp-for="Kapasite" class="form-control">
                <span asp-validation-for="Kapasite" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="YatakOdasi" class="form-label"></label>
                <input asp-for="YatakOdasi" class="form-control">
                <span asp-validation-for="YatakOdasi" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="YatakSayisi" class="form-label"></label>
                <input  asp-for="YatakSayisi" class="form-control">
                <span asp-validation-for="YatakSayisi" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Banyo" class="form-label"></label>
                <input   asp-for="Banyo" class="form-control">
                <span asp-validation-for="Banyo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Fiyat" class="form-label"></label>
                <input  asp-for="Fiyat" class="form-control">
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Url" class="form-label"></label>
                <input asp-for="Url" class="form-control">
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>

            @if(User.FindFirstValue(ClaimTypes.Role) == "admin")
            {
                <div class="form-check mb-3">
                    <input asp-for="AktifMi" class="form-check-input">
                    <label asp-for="AktifMi" class="form-check-label"></label>
                </div>
            }


            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
        </div>
    </div>
</div>
@section Scripts {

<script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/7.1.2/tinymce.min.js" integrity="sha512-2T0G/zn88pKqnmUStXKW0BSPIW3Y2sky5Bl6HER5TwPGqCsLTVzAQRZMum/ptf5mRwYylP1lcvnLkgn6chASuA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
    tinymce.init({
        selector: '#Aciklama'
    })
</script>
}

