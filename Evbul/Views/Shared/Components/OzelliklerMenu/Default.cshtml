@model List<Ozellik>
<div class="card mb-3">
    <div class="card-header">
        <h5 class="card-title mb-0">Özellikler</h5>
    </div>
    <div class="card-body">
        <ul class="list-inline d-flex flex-wrap gap-2">
            @foreach (var ozellik in Model)
            {
                <li class="list-inline-item">
                    <a href="/evler/ozellik/@ozellik.Url" class="btn btn-outline-secondary btn-sm">@ozellik.Yazi</a>
                </li>
            }
        </ul>
    </div>
</div>