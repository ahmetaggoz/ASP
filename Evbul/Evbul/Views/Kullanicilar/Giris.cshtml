@model GirisViewModel

<div class="row">
    <div class="col-12">
        <div class="bg-white p-4">
            
        
        <h1>Giriş</h1>
        <form action="Giris" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Eposta" class="form-label"></label>
                <input asp-for="Eposta" class="form-control">
                <span asp-validation-for="Eposta" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Parola" class="form-label"></label>
                <input asp-for="Parola" class="form-control">
                <span asp-validation-for="Parola" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Giriş</button>
        </form>
        </div>
    </div>
</div>
