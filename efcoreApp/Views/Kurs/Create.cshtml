@model Kurs
<h2>Kurs Listesi</h2>
<hr>
<form asp-controller="Kurs" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Baslik" class="form-label">Kurs Adı</label>
        <input asp-for="Baslik" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="OgretmenId" class="form-label"></label>
        <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-control">
            <option value="">Seçiniz</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>