@model Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yetenekler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenekler Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yetenekler ile İlgili Güncelleme İşlemini Aşağıdaki Panelden Yapabilirsiniz :
						</div>
						<form method="post">
							<input type="hidden" asp-for="SkillId" class="form-control" />
							<label>Yetenek Bilgisi</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Seviye Değer</label>
							<input type="text" asp-for="Value" class="form-control" />
							<br />
							<button class="btn btn-primary">Yetenek Güncelle</button>
						</form>

					</div>
				</div>

			</div>

		</div>
	</div>
</div>

