@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımda Açıklama</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımda ile İlgili Güncelleme İşlemleri Aşağıdaki Panelden Yapabilirsiniz :
						</div>
						<form method="post">
							<input type="hidden" asp-for="AboutId" />
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Kısa Açıklama</label>
							<input type="text" asp-for="SubDescription" class="form-control" />
							<br />
							<label>Detaylı Açıklama</label>
							<textarea rows="4" asp-for="Details" class="form-control"></textarea>
							<br />
							<button class="btn btn-warning">Hakkımda Güncelle</button>
						</form>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>